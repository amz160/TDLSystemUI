<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.todolistsystem.tdlsystemui.ConfirmationController"
      spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <styleClass>
        <String fx:value="popup-box"/>
    </styleClass>

    <Label fx:id="labelConfirmationText" text="Are you sure?">
        <styleClass>
            <String fx:value="popup-title"/>
        </styleClass>
    </Label>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Yes" onAction="#confirmAction">
            <styleClass>
                <String fx:value="confirm-yes-button"/>
            </styleClass>
        </Button>
        <Button text="No" onAction="#closePopup">
            <styleClass>
                <String fx:value="confirm-no-button"/>
            </styleClass>
        </Button>
    </HBox>
</VBox>

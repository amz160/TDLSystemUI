<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.todolistsystem.tdlsystemui.ErrorPopupController"
      spacing="15" alignment="CENTER" stylesheets="@styles.css">
    <styleClass>
        <String fx:value="popup-box"/>
    </styleClass>

    <Label fx:id="labelErrorMessage" text="Something went wrong.">
        <styleClass>
            <String fx:value="popup-title"/>
        </styleClass>
    </Label>

    <Button text="OK" onAction="#closePopup">
        <styleClass>
            <String fx:value="confirm-no-button"/>
        </styleClass>
    </Button>
</VBox>
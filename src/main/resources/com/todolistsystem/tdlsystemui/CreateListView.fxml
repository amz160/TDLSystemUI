<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.todolistsystem.tdlsystemui.CreateListController"
      spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <styleClass>
        <String fx:value="popup-box"/>
    </styleClass>

    <Label text="Create New To-Do List">
        <styleClass>
            <String fx:value="popup-title"/>
        </styleClass>
    </Label>

    <TextField fx:id="textFieldListName" promptText="Enter list name"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Create" onAction="#createList">
            <styleClass>
                <String fx:value="main-button"/>
            </styleClass>
        </Button>
        <Button text="Cancel" onAction="#closePopup">
            <styleClass>
                <String fx:value="main-button"/>
            </styleClass>
        </Button>
    </HBox>
</VBox>

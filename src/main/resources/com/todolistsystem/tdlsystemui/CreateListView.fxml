<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.todolistsystem.tdlsystemui.CreateListController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20px;">
    <Label text="Create New To-Do List"/>
    <TextField fx:id="textFieldListName" promptText="Enter list name"/>
    <HBox spacing="10">
        <Button text="Create" onAction="#createList"/>
        <Button text="Cancel" onAction="#closePopup"/>
    </HBox>
</VBox>
